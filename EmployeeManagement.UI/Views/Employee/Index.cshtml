@model IEnumerable<EmployeeViewModel>

    <div class="text-center">
        <h4 class="display-4">EMPLOYEE LIST</h4>
    </div>

<div class="text-center">
        <button class="btn btn-success" data-toggle="modal" data-target="#myModal"> CREATE NEW EMPLOYEE</button>
</div>
<div class="text-center">
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="createform">
                    <label>Name</label><br>
                    <input type="text" style="width:100%" id="name" name="name" placeholder="Enter The Name" required pattern="[A-Za-z\s\.]{1,20}" maxlength="20"/><br>
                    <label>Department</label><br>
                    <select type="text" name="Dept" id="dept" style="width:100%">
                        <option value="Testing">Testing</option>
                        <option value="Developer">Developer</option>
                        <option value="Finance">Finance</option>
                        <option value="Accountant">Accountant</option>
                        <option value="hr">HR</option>
                    </select><br>
                    <label>Age</label><br>
                    <input type="number" style="width:100%" id="age" name="age" placeholder="Enter The Age" required min="18" max="50"/><br>
                    <label>Address</label><br>
                    <input type="text" style="width:100%" id="address" name="address" placeholder="Enter The Address" required pattern="[A-Za-z]{1-9}" maxlength="50"/><br><br><br>
                    <input class="btn btn-success" type="submit" value="SUBMIT"/>
                </form>
            </div>
        </div>
    </div>
</div>
    </div>
<div class="text-center">
<table class="table table-bordered" border="1">
    <thead>
        <tr>
            <td>
                <b>ID</b>
            </td>
            <td>
                <b>NAME</b>
            </td>
            <td>
                <b>DEPARTMENT</b>
            </td>
            <td>
            </td>
        </tr>
    </thead>
    @foreach (var employee in Model)
    {
<tr>
    <td>@employee.Id</td>
    <td>@employee.Name</td>
    <td>@employee.Department</td>
    <td>
        <button class="btn btn-primary employeeDetails" data-id="@employee.Id"> DETAILS</button>
        <button class="btn btn-info employeeEdit" data-id="@employee.Id"  data-toggle="modal" data-target="#myModals"> EDIT</button>
        <button class="btn btn-danger employeeDelete" data-id="@employee.Id"> DELETE</button>
    </td>
</tr>
}
</table>
    </div>

<div class="modal fade" id="myModals" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Edit</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="update">
                    <label>Id:</label><br>
                    <input type="number" style="width:100%" id="editid" name="id" min="1" disabled/><br>
                    <label>Name:</label><br>
                    <input type="text" style="width:100%" id="editname" name="name" required pattern="[A-Za-z\s\.]{1,20}" maxlength="20"/><br>                   
                    <label>Department:</label><br>
                    <select type="text" name="Dept" id="editdept" style="width:100%">
                        <option value="Testing">Testing</option>
                        <option value="Developer">Developer</option>
                        <option value="Finance">Finance</option>
                        <option value="Accountant">Accountant</option>
                        <option value="HR">HR</option>
                    </select><br>
                    <label>Age:</label><br>
                    <input type="number" style="width:100%" id="editage" name="age" required min="18" max="50"/><br>
                    <label>Address:</label><br>
                    <input type="text" style="width:100%" id="editaddress" name="address" required pattern="[A-Za-z]{1-9}" maxlength="50"/><br><br><br>
                    <input class="btn btn-success" type="submit" value="SUBMIT"/>
                </form>
            </div>
        </div>

    </div>
</div>

<div id="EmployeeCard">

</div>

@section Scripts{
    <script src="~/js/employee.js"></script>
}
